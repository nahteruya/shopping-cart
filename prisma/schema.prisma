generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid()) @map("_id") @db.ObjectId
  name String 
  description String
  imageUrl String
  price Float @db.Double()
  discountPercentage Int? @default(0) 
}
